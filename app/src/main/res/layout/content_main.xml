<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1eeee"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.itdel.asemjr.dwgapps.MainActivity"
        tools:showIn="@layout/app_bar_main">

        <ProgressBar
            android:id="@+id/custom_refresh_recycler_view_progressbar"
            style="@android:style/Widget.Holo.Light.ProgressBar.Large.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="384dp"
            android:layout_height="105dp"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/icic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/informasiAir"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_marginEnd="268dp"
            android:layout_marginStart="40dp"

            android:layout_marginTop="120dp"
            android:background="@drawable/button_informasi_air"
            android:radius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/aturAir"
            android:layout_width="134dp"
            android:layout_height="127dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="800dp"
            android:background="@drawable/button_atur_air"
            android:contentDescription="@string/action_settings"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<Button-->
            <!--android:id="@+id/aturAir3"-->
            <!--android:layout_width="134dp"-->
            <!--android:layout_height="127dp"-->
            <!--android:layout_marginStart="28dp"-->
            <!--android:layout_marginTop="608dp"-->
            <!--android:background="@drawable/button_atur_air"-->
            <!--android:contentDescription="@string/action_settings"-->

            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent" />-->

        <Button
            android:id="@+id/buttonConnectDevice"
            android:layout_width="201dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="800dp"
            android:background="@drawable/button_hubungkan_device"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>